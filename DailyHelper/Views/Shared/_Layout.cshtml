<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DailyHelper</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background-color: #f4f4f4; padding-top: 20px; }
        .navbar { margin-bottom: 20px; border-radius: 5px; }

        /* Dynamic CSS Logic: Changes navbar and primary button color based on role */
        @if (Session["Role"] != null && Session["Role"].ToString() == "Admin") {
            <text>
                .navbar { background-color: #34495e !important; } /* Dark Blue for Admin */
                .btn-primary { background-color: #34495e; border-color: #34495e; }
            </text>
        } else {
            <text>
                .navbar { background-color: #27ae60 !important; } /* Green for User */
                .btn-primary { background-color: #27ae60; border-color: #27ae60; }
            </text>
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark px-3">
            <a class="navbar-brand" href="#">DailyHelper</a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    @if (Session["UserID"] == null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                    }
                    else
                    {
                        if (Session["Role"].ToString() == "User")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Task/Index">Tasks</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Task/Calendar">Calendar</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Admin</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout (@Session["Username"])</a></li>
                    }
                </ul>
            </div>
        </nav>

        @RenderBody()
    </div>
</body>
</html>