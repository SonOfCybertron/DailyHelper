@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Login - DailyHelper</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #eee;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            width: 350px;
        }
    </style>
</head>
<body>
    <div class="card login-card p-4 shadow-lg">
        <h3 class="text-center text-primary mb-4">DailyHelper Login</h3>
        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
            <div class="text-center">
                <a href="/Account/Register">Don't have an account? Register here.</a>
            </div>
            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center mt-2">@ViewBag.Error</p>
            }
        </form>
    </div>
</body>
</html>